<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    tools:context=".activity.MainActivity">

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:background="@mipmap/rectangle6"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_81">
        <RadioGroup
            android:layout_marginTop="10dp"
            android:id="@+id/main_rg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_81"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/main_rb_show"
                android:layout_width="@dimen/dp_26"
                android:layout_height="@dimen/dp_26"
                android:layout_marginLeft="@dimen/dp_32"
                android:background="@drawable/show"
                android:checked="true"
                android:button="@null" />

            <RadioButton
                android:id="@+id/main_rb_circle"
                android:layout_width="@dimen/dp_26"
                android:layout_height="@dimen/dp_26"
                android:layout_marginLeft="@dimen/dp_32"
                android:background="@drawable/circle"
                android:button="@null" />

            <RadioButton
                android:id="@+id/main_rb_shop"
                android:layout_width="@dimen/dp_55"
                android:layout_height="@dimen/dp_55"
                android:layout_marginLeft="@dimen/dp_31"
                android:background="@mipmap/commom_tab_btn_shopping_cart_n"
                android:button="@null" />

            <RadioButton
                android:id="@+id/main_rb_order"
                android:layout_width="@dimen/dp_26"
                android:layout_height="@dimen/dp_26"
                android:layout_marginLeft="@dimen/dp_36"
                android:background="@drawable/order"
                android:button="@null" />

            <RadioButton
                android:id="@+id/main_rb_my"
                android:layout_width="@dimen/dp_26"
                android:layout_height="@dimen/dp_26"
                android:layout_marginLeft="@dimen/dp_32"
                android:layout_marginRight="@dimen/dp_32"
                android:background="@drawable/my"
                android:button="@null" />

        </RadioGroup>

    </LinearLayout>
</RelativeLayout>